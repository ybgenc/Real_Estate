@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Create Category</h6>
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input type="text" class="form-control" asp-for="productTitle">
                        <br />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Product City</label>
                        <input type="text" class="form-control" asp-for="productCity">
                        <br />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Product District</label>
                        <input type="text" class="form-control" asp-for="productDistrict">
                        <br />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Product Category</label>
                        @* @Html.DropDownListFor(x => x.categoryId, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" }) *@
                        <select class="form-control" id="categoryId" name="categoryId">
                            <option value="">Select a category...</option>
                            @foreach (var item in (List<SelectListItem>)ViewBag.v)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Price</label>
                        <input type="text" class="form-control" asp-for="productPrice">
                        <br />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Product Type</label>
                        <input type="text" class="form-control" asp-for="productDistrict">
                        <br />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Product Cover Image</label>
                        <input type="text" class="form-control" asp-for="productCoverImage">
                        <br />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Product Address</label>
                        <textarea rows="5" class="form-control" asp-for="productAddress"></textarea>
                        <br />
                    </div>
                    <button type="submit" class="btn btn-primary">Add new product!</button>
                </form>
            </div>
        </div>
    </div>
</div>

