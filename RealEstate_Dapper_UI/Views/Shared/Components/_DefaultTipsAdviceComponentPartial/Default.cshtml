@model List<ResultTipsAdviceDto>
<div class="w3l-news" id="news">
    <section id="grids5-block" class="py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <h3 class="title-big text-center">Deals and Advice</h3>
            <div class="row mt-lg-5 mt-4 pt-3">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 mt-md-0 mt-sm-4">
                        <div class="grids5-info">
                            <span class="posted-date">
                                <a href="#blog-single">
                                    <span class="small">@item.Year</span>
                                    <span class="big">@item.Day</span>
                                    <span class="small">@item.Month</span>
                                </a>
                            </span>
                            <a href="#blog-single" class="d-block zoom">
                                <img style="width:500px;height:250px;" src="@ViewBag.productCoverImages[Model.IndexOf(item)]" alt="" class="img-fluid news-image" />
                            </a>
                            <div class="blog-info">
                                <a href="#category" class="category">@item.DealAdvice</a>
                                <h4><a href="#blog-single">@item.Title</a></h4>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
</div>
