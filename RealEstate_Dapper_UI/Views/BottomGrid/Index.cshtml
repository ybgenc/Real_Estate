@model List<ResultBottomGridDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Bottom Grid List</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Icon</th>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><i class="@item.Icon me-2"></i></td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>

                                    <td><a href="/BottomGrid/DeleteBottomGrid/@item.BottomGridID" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/BottomGrid/UpdateBottomGrid/@item.BottomGridID" class="btn btn-outline-success">Update</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/BottomGrid/CreateBottomGrid/" class="btn btn-outline-info">Create New Bottom Grid</a>
                </div>
            </div>
        </div>
    </div>
</div>

