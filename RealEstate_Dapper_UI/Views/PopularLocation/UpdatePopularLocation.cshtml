@model UpdatePopularLocationDto
@{
    ViewData["Title"] = "UpdatePopularLocation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Update Popular Location</h6>
                <form method="post">
                    <div class="mb-3">
                        <input type="hidden" asp-for="LocationID" />
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" asp-for="CityName">
                        <br />
                        <label class="form-label">Image</label>
                        <input type="text" class="form-control" asp-for="ImageUrl">
                        <br />
                    </div>
                    <button type="submit" class="btn btn-primary">Update location!</button>
                </form>
            </div>
        </div>
    </div>
</div>


